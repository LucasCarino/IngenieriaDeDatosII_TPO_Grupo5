<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Document</title>
</head>
<body class="bg-teal-200">
  <%- include('navbar') %>
  <h1 class="text-center text-blue-900 text-3xl font-bold p-5">Cat√°logo de Productos</h1>

  <ul class="grid grid-cols-4 gap-4 p-5">
  <% products.forEach(function(product) { %>
    
    <li class="text-center bg-white rounded-lg shadow-md hover:shadow-lg transition duration-200">
      <a href="/products/<%= product.id %>" class="block p-4 hover:text-blue-700 transition duration-200">
        <!-- <img src="<%= product.url %>" alt="Product image"> -->
        <h2 class="text-blue-900 text-xl font-bold mb-2"><%= product.name %></h2>
        <p class="text-blue-700">$<%= product.price %></p>
      </a>
    </li>
  <% }); %>
  </ul>
</body>
</html>
