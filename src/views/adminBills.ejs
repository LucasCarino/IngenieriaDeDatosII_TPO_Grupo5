<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <title>Admin</title>
</head>
<style>
    #bill-dialog {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
    }
</style>
<body class="bg-zinc-100 pt-[70px]">
    <%- include('navbar') %>
        <h1 class="text-center text-2xl font-bold my-6">Lista de facturas</h1>
        <div class="w-full max-w-4xl mx-auto">
            <table class="w-full text-md bg-white shadow-md rounded mb-4">
                <thead>
                    <tr class="border-b">
                        <th class="text-left p-3 px-5">ID</th>
                        <th class="text-left p-3 px-5">Número de factura</th>
                        <th class="text-left p-3 px-5">Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <% bills.forEach(bill=> { %>
                        <tr class="border-b item-row bill-row" data-id="<%= bill._id %>">
                            <td class="p-3 px-5">
                                <%= bill._id %>
                            </td>
                            <td class="p-3 px-5">
                                <%= bill.billNumber %>
                            </td>
                            <td class="p-3 px-5">
                                <%= new Date(bill.date).toLocaleDateString("es-ES") %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <div id="bill-dialog" class="fixed z-10 inset-0 overflow-y-auto flex items-center justify-center">
            <div class="bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                Detalles de la factura
                            </h3>
                            <div class="mt-2">
                                <p id="bill-details" class="text-sm leading-5 text-gray-500"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <span class="flex w-full rounded-md shadow-sm sm:ml-3 sm:w-auto">
                        <button id="close-dialog" class="inline-flex justify-center w-full rounded-md border border-transparent px-4 py-2 bg-indigo-600 text-base leading-6 font-medium text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo transition ease-in-out duration-150 sm:text-sm sm:leading-5">
                            Cerrar
                        </button>
                    </span>
                </div>
            </div>
        </div>
</body>
<script>
    document.querySelectorAll('.bill-row').forEach(row => {
        row.addEventListener('click', function () {
            const id = this.dataset.id;

            // Haz una solicitud AJAX para obtener los detalles de la factura
            fetch(`/admin/bills/${id}`)
                .then(response => response.json())
                .then(data => {
                    const details = `
                    Número de factura: ${data.billNumber}<br>
                    Fecha: ${new Date(data.date).toLocaleDateString("es-ES")}<br>
                    Nombre: ${data.order.customerDetails.name}<br>
                    Apellido: ${data.order.customerDetails.lastname}<br>
                    Dirección: ${data.order.customerDetails.address}<br>
                    Email: ${data.order.customerDetails.email}<br>
                    Pago: ${data.order.customerDetails.payment}<br>
                    Subtotal: ${data.order.subtotal}<br>
                    Impuestos: ${data.order.taxes}<br>
                    Total: ${data.order.total}
                `;
                document.getElementById('bill-details').innerHTML = details;

                // Muestra el diálogo
                document.getElementById('bill-dialog').style.display = 'block';
            });
        });
    });

    document.getElementById('close-dialog').addEventListener('click', function() {
        document.getElementById('bill-dialog').style.display = 'none';
    });
</script>

</html>