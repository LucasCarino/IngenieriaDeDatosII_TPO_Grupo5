<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Document</title>
</head>
<body class="bg-teal-200">
    <%- include('navbar') %>
    <div class="max-w-2xl mx-auto p-6">
        <h2 class="text-center text-blue-900 text-3xl font-bold mb-6">Termina tu compra</h2>

        <ul class="space-y-4">
            <% products.forEach(product => { %>
                <li class="bg-white rounded-lg shadow-md p-4">
                    <h2 class="text-blue-900 text-xl font-bold mb-2"><%= product.name %></h2>
                    <p class="text-blue-700">Precio: <%= product.price %></p>
                    <p class="text-blue-700">Cantidad: <%= product.quantity %></p>
                    <p class="text-blue-700">Subtotal: <%= product.price * product.quantity %></p>
                </li>
            <% }) %>
        </ul>
        <h2 class="text-center text-blue-900 text-2xl font-bold mt-6">Total: <%= total %></h2>
        <form action="/cart/checkout" method="POST" class="mt-6 space-y-4">
            <div>
                <label for="name" class="block text-blue-900">Nombre:</label>
                <input type="text" id="name" name="name" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-900">
            </div>
            <div>
                <label for="lastname" class="block text-blue-900">Apellido:</label>
                <input type="text" id="lastname" name="lastname" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-900">
            </div>
            <div>
                <label for="email" class="block text-blue-900">Correo:</label>
                <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-900">
            </div>
            <div>
                <label for="address" class="block text-blue-900">Dirección:</label>
                <textarea id="address" name="address" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-900"></textarea>
            </div>
            <div>
                <label for="payment" class="block text-blue-900">Método de pago:</label>
                <select id="payment" name="payment" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-900">
                    <option value="credit">Tarjeta de credito</option>
                    <option value="debit">Tarjeta de débito</option>
                </select>
            </div>
            <button type="submit" class="block w-full text-center mt-6 px-4 py-2 bg-blue-900 text-white rounded hover:bg-blue-700 transition duration-200 cursor-pointer">Confirmar</button>
        </form>
    </div>
</body>
</html>