<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Document</title>
</head>
<body class="bg-zinc-100 pt-[70px]">
  <%- include('navbar') %>
  <h1 class="text-center text-stone-800 text-2xl font-bold p-5">Cat√°logo de Productos</h1>

  <ul class="grid grid-cols-5 gap-4 px-5 pb-5">
    <% products.forEach(function(product) { %>
      <li class="text-center bg-blue-100 hover:bg-blue-200 rounded-lg shadow-md hover:shadow-lg transition duration-200 transform hover:scale-105 p-2">
        <a href="/products/<%= product.id %>" class="block hover:text-stone-700 transition duration-200">
          <h2 class="text-stone-800 text-lg font-bold mb-2"><%= product.name %></h2>
          <div class="w-full h-52 overflow-hidden bg-white rounded-md">
            <img src="<%= product.url %>" alt="Product image" class="w-full h-full object-contain mx-auto p-5">
          </div>
          <p class="text-stone-800 text-lg font-semibold">$<%= product.price.toFixed(2) %></p>
        </a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
